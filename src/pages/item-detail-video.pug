extends _layout.pug

block var
	- var title = 'Bài viết chi tiết'
	- var bodyClass = 'item-detail-page'

block main
	section.item-detail
		.container
			.title
				span HÀNH TRÌNH CỦA:
				h3 PHAN GIA CÁT NHẬT LINH
			.row
				.col-7.main-item
					figure
						.box-img
							img(src="./img/item-detail/item-01.png", alt="", srcset="")
							.icon-vote(data-vote='false')
								.heart-full
								.heart-nofull
						figcaption
							.date
								span 24/02/2020
							.number-vote
								p 50
								span vote
					.story-racetrack
						.title-story
							h3 Câu chuyện đường đua
						textarea(name="", cols="30", rows="10" placeholder="Nhập câu chuyện của bạn...")
						a(href="repair-post.html").button-repair CHỈNH SỬA BÀI DỰ THI
				.col-5.list-same-item
					.same-item
						figure
							figcaption
								h5 VIDEO HÀNH TRÌNH
							.img-video
								img(src="", alt="", srcset="")
								a.button-play-video(data-fancybox data-ratio="2" href="https://www.youtube.com/watch?v=vzBHzvZylaI")
									img(src="./img/icons/button_play_video.png", alt="", srcset="")
					.same-item.video-404
						figure
							figcaption
								h5 VIDEO BẢO TRÌ XE
							.img-video
								img(src="", alt="", srcset="")
								a.button-play-video(data-fancybox data-ratio="2" href="https://www.youtube.com/watch?v=vzBHzvZylaI")
									img(src="./img/icons/button_play_video.png", alt="", srcset="")
					a.back-page(href="#") QUAY LẠI