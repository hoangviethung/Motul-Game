extends _layout.pug

block var
	- var title = 'Sửa Bài Viết'
	- var bodyClass = 'repair-post-page'

block main
	section.item-detail
		.container
			.title
				span HÀNH TRÌNH CỦA:
				h3 PHAN GIA CÁT NHẬT LINH
			.row
				.col-lg-7.main-item
					figure
						.box-img
							img(src="./img/item-detail/item-01.png", alt="", srcset="")
							.icon-vote
								.heart-full
								.heart-nofull
						figcaption
							.date
								span 24/02/2020
							.number-vote
								p 50
								span vote
					.story-racetrack
						.title-story
							h3 Câu chuyện đường đua
						textarea(name="", cols="30", rows="10" placeholder="Nhập câu chuyện của bạn...")
					a(href="repair-post.html").button-repair CHỈNH SỬA BÀI DỰ THI
				.col-lg-5.list-same-item
					.same-item
						figure
							figcaption
								h5 VIDEO HÀNH TRÌNH
							.img-video
								#player_1(data-url='https://www.youtube.com/watch?v=KrrpHlb_pCA')
								a.start-video
						.formSubmitLink
							form(action="item-detail-video.html")
								label(for="") VIDEO BẢO TRÌ XE
								input(type="text", name="", placeholder="Nhập link video của bạn")
								button XÁC NHẬN